var params = {
  url: location.href,
  r: Math.random(),
  referer: document.referrer,
};

var components = [];

for(var i in params) {
  components.push(i + "=" + params[i]);
}

var xhr = new XMLHttpRequest();
xhr.open('GET', '<%= Rails.configuration.base_url %>/api/c/p?' + encodeURI(components.join("&")), true);
xhr.send();
